{% extends "base.html.twig" %}
{% block title %}Budget Planning{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('reset.css', 'css')}}">
    <link rel="stylesheet" type="text/css" href="{{ asset('index.css', 'css')}}">
{% endblock %}
{% block body %}
    <div class="main-wrapper">
        <div class="block">
            <h1>History (expense)</h1>
            <table class="money-operation">
                <tr>
                    <th>Category</th>
                    <th>Sum</th>
                    <th>Date</th>
                    <th>Description</th>
                    <th></th>
                    <th></th>
                </tr>
                {% for expense in history_expense %}
                    <tr>
                        <th>{{ expense.category.name }}</th>
                        <th>{{ expense.sum }}</th>
                        <th>{{ expense.date | date("d.m.Y", "Europe/Moscow") }}</th>
                        <th>{{ expense.description }}</th>
                        <th><a href='/'>Edit</a></th>
                        <th><a href='/'>Delete</a></th>
                    </tr>
                {% endfor %}
            </table>
        </div>
        <div class="block">
            <h1>History (income)</h1>
            <table class="money-operation">
                <tr>
                    <th>Category</th>
                    <th>Sum</th>
                    <th>Date</th>
                    <th>Description</th>
                    <th></th>
                    <th></th>
                </tr>
                {% for income in history_income %}
                    <tr>
                        <th>{{ income.category.name }}</th>
                        <th>{{ income.sum }}</th>
                        <th>{{ income.date | date("d.m.Y", "Europe/Moscow") }}</th>
                        <th>{{ income.description }}</th>
                        <th><a href='/'>Edit</a></th>
                        <th><a href='/'>Delete</a></th>
                    </tr>
                {% endfor %}
            </table>
        </div>
        <a href="{{ path('profile') }}">To profile</a>
    </div>
{% endblock %}
