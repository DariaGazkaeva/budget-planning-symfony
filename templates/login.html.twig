{% extends "base.html.twig" %}
{% block title %}Budget Planning{% endblock %}
{% block stylesheets %}
    <link rel="stylesheet" type="text/css" href="{{ asset('reset.css', 'css')}}">
    <link rel="stylesheet" type="text/css" href="{{ asset('index.css', 'css')}}">
{% endblock %}
{% block body %}
    <div class="main-wrapper">
        <div class="form">
            <h1>Log in</h1>
            {% if error %}
                <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}
            <form action="{{ path('login') }}" method="post">
                <label for="email">Email:</label>
                <input type="text" id="email" name="_username" value="{{ last_username }}"/>

                <label for="password">Пароль:</label>
                <input type="password" id="password" name="_password"/>

                <input type="hidden" name="_target_path" value="/profile"/>

                <input type="submit" value="Send"/>
            </form>
        </div>
    </div>
{% endblock %}
